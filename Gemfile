  gem "rack-test", "~> 0.5"
  gem "yajl-ruby", "~>0.8.2", :platforms => :mri
  gem "json", "~>1.5.3", :platforms => [:jruby, :rbx]
  gem "i18n"
  gem "minitest"
end

check process resque_worker_[QUEUE_NAME]
  with pidfile [RAILS_ROOT]/tmp/pids/resque_worker_[QUEUE_NAME].pid
  start program = "/usr/bin/env USER=[RUN_AS_USER] HOME=[RUN_AS_USER_HOMEDIR] PATH=/usr/local/bin:/usr/bin:/bin RAILS_ENV=production QUEUE=[QUEUE_NAME] VERBOSE=1 PIDFILE=[RAILS_ROOT]/tmp/pids/resque_worker_[QUEUE_NAME].pid /bin/sh -c 'cd [RAILS_ROOT]; nohup rake environment resque:work >> [RAILS_ROOT]/log/resque_worker_[QUEUE_NAME].log 2>&1 &'" as uid [RUN_AS_USER] and gid [RUN_AS_GROUP]
  stop program = "/bin/sh -c 'cd [RAILS_ROOT] && kill -s QUIT `cat [RAILS_ROOT]/tmp/pids/resque_worker_[QUEUE_NAME].pid` && rm -f [RAILS_ROOT]/tmp/pids/resque_worker_[QUEUE_NAME].pid; exit 0;'"
  if totalmem is greater than 300 MB for 10 cycles then restart  # eating up memory?
  group resque_workers

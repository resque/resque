<% if params[:id] && @worker && @worker.job %>
  <h1><%= @worker %>'s job</h1>

  <table>
    <tr>
      <th>&nbsp;</th>
      <th>Where</th>
      <th>Queue</th>
      <th>Started</th>
      <th>Class</th>
      <th>Args</th>
    </tr>
      <tr>
        <td><img src="<%=u 'working.png' %>" alt="working" title="working"></td>
        
        <td><a href="<%=u "/workers/#{@worker}" %>"><%= @host %>:<%= @pid %></a></td>
        <td><a class="queue" href="<%=u "/queues/#{queue}" %>"><%= worker.job["queue"] %></a></td>
        <td><span class="time"><%= worker.job['run_at'] %></span></td>
        <td>
          <code><%= @worker.job['payload']['class'] %></code>
        </td>
        <td><%=h @worker.job['payload']['args'].inspect %></td>
      </tr>
  </table>

<% else %>
  <h1 class='wi'><%= @workers.size %> of <%= resque.workers.size %> Workers Working</h1>
  <p class='intro'>The list below contains all workers which are currently running a job.</p>
  <table class='workers'>
    <tr>
      <th>&nbsp;</th>
      <th>Where</th>
      <th>Queue</th>
      <th>Processing</th>
    </tr>
    <% if @workers.empty? %>
    <tr>
      <td colspan="4" class='no-data'>Nothing is happening right now...</td>
    </tr>
    <% end %>

    <% for worker in @workers.sort_by { |w| w.job['run_at'] ? w.job['run_at'] : '' } %>
      <tr>
        <td class='icon'><img src="<%=u worker.state %>.png" alt="<%= worker.state %>" title="<%= worker.state %>"></td>
        <td class='where'><a href="<%=u "/workers/#{worker}" %>"><%= worker.to_s.split(":").first(2).join(":") %></a></td>
        <td class='queues queue'>
          <a class="queue-tag" href="<%=u "/queues/#{job['queue']}" %>"><%= worker.job['queue'] %></a>
        </td>
        <td class='process'>
          <% if worker.job['queue'] %>
            <code><%= worker.job['payload']['class'] %></code>
            <small><a class="queue time" href="<%=u "/working/#{worker}" %>"><%= worker.job['run_at'] %></a></small>
          <% else %>
            <span class='waiting'>Waiting for a job...</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

<% end %>
